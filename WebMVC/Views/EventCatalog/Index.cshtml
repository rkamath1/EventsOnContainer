@{
    ViewData["Title"] = "TheHaps Events Home";
    @model WebMVC.ViewModels.EventCatalogIndexViewModel
}
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    The way to find joy in your city
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner-2.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Many happenings
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner-3.png" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    One place to find them all!
                </p>
            </div>
        </div>

    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<section class="esh-catalog-filters">
    <div class="container">
        <form asp-action="Index" asp-controller="EventCatalog" method="post">
            <label class="esh-catalog-label" data-title="type">
                <select asp-for="@Model.TypeFilterApplied" asp-items="@Model.Types" class="esh-catalog-filter"></select>
            </label>
            <label class="esh-catalog-label" data-title="category">
                <select asp-for="@Model.CategoryFilterApplied" asp-items="@Model.Categories" class="esh-catalog-filter"></select>
            </label>
            <label class="esh-catalog-label" data-title="location">
                <select asp-for="@Model.LocationFilterApplied" asp-items="@Model.Locations" class="esh-catalog-filter"></select>
            </label>
            <input class="esh-catalog-send" type="image" src="~/images/arrow-right.svg" />
        </form>
    </div>
</section>
<div class="container">
    @if (Model.EventItems.Count() > 0)
    {
        @await Html.PartialAsync("_pagination", Model.PaginationInfo)

        <div class="esh-catalog-items row">
            @foreach (var eventItem in Model.EventItems)
            {
                <div class="esh-catalog-item col-md-4">
                    @await Html.PartialAsync("_product", eventItem)
                </div>
            }
        </div>

        @await Html.PartialAsync("_pagination", Model.PaginationInfo)
    }
    else
    {
        <div class="esh-catalog-items row">
            THERE ARE NO RESULTS THAT MATCH YOUR SEARCH
        </div>
    }
</div>

