@using WebMVC.Services
@using WebMVC.ViewModels

@*@model  WebMVC.Models.CartModels.Cart*@
@inject IIdentityService<ApplicationUser> identityService 

@{
    ViewData["Title"] = "My Cart";
}

    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/banner.jpg" alt="ASP.NET" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        The way to find joy in your city
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/banner-2.png" alt="Visual Studio" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Many happenings
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/banner-3.png" alt="Package Management" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        One place to find them all!
                    </p>
                </div>
            </div>

        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
<form method="post" id="cartForm">
    <div class="esh-basket">
        @await Html.PartialAsync("_Header", new List<Header>() {
            new Header() { Controller = "EventCatalog", Text = "Back to catalog" } })

        @await Component.InvokeAsync("CartList", new { user = identityService.Get(User) })
    </div>
</form>